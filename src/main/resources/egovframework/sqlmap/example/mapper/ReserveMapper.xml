<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="egovframework.mapper.ReserveMapper">

    <!-- 날짜로 예약 목록 조회 -->
    <select id="findByDate" parameterType="java.time.LocalDate" resultType="egovframework.vo.ReserveVO">
        SELECT * 
        FROM reservations 
        WHERE date = #{date}
    </select>

    <!-- ID로 예약 조회 -->
    <select id="findById" parameterType="long" resultType="egovframework.vo.ReserveVO">
        SELECT * 
        FROM reservations 
        WHERE id = #{id}
    </select>

    <!-- 예약 상태 업데이트 -->
    <update id="updateReservationStatus" parameterType="egovframework.vo.ReserveVO">
        UPDATE reservations
        SET status = #{status}
        WHERE id = #{id}
    </update>

</mapper>
